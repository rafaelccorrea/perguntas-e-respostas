<%-include ("./partials/header.ejs") %>
<body>

<%-include ("./partials/navbar.ejs")%>

<div class="container">

    <!-- Passando a variavel pergunta para o front-end -->
    <!-- Buscando o titulo e a descricao no banco de dados -->
    <hr>
    <h1> <%= pergunta.titulo %> </h1>
    <p> <%= pergunta.descricao %> </p>
    <hr>

    <!-- Criando Formulario de respostas -->
    <form method="POST" action="/responder">
        <h3 class="mt-4">Responder</h3>
        <label>Resposta: </label>
        <textarea placeholder="Digite Sua Resposta" class="form-control mt-2" name="corpo"></textarea>
        <!-- Passando o id da pergunta para o campo de resposta -->
        <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
        <button type="submit" class="btn btn-primary mt-3">Responder</button>
    
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>

    <% respostas.forEach(resposta => {%>
        <br>
        <div class="card">
            <div class="card-body">
                <p><%= resposta.corpo %></p> <br>
            </div>
        </div>

    <% }) %>

</div>

</body>
<%-include ("./partials/footer.ejs")%>